# Configurações do Servidor
PORT=3001
NODE_ENV=development

# Banco de Dados PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=manual_pos_obras
DB_USER=postgres
DB_PASSWORD=sua_senha_aqui

# JWT (Autenticação)
JWT_SECRET=sua_chave_secreta_jwt_aqui
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=sua_chave_secreta_refresh_aqui
JWT_REFRESH_EXPIRES_IN=30d

# Upload de Arquivos
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Integração com Diário de Obras
DIARY_API_URL=https://api.diario-obras.exemplo.com
DIARY_API_KEY=sua_api_key_do_diario_aqui
DIARY_WEBHOOK_SECRET=secret_para_validar_webhooks

# Email (para notificações e recuperação de senha)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu_email@gmail.com
SMTP_PASSWORD=sua_senha_email
EMAIL_FROM=noreply@manual-pos-obras.com

# URLs
FRONTEND_URL=http://localhost:5173
API_URL=http://localhost:3001

# Notificações
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=false

# Logs
LOG_LEVEL=info

